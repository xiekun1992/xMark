#!/usr/bin/env node

'use strict';

var colors=require('colors');
var fs=require('fs');

var args=process.argv.slice(2);
args[1]=args[1]||'xmirror';
var dest=process.cwd()+'\\'+args[1];

var showHelp=()=>{
	console.log([
		' ---------------------------------------------------',
		'|                                                   |',
		'|               welcome to use xmirror              |',
		'|                   current v0.0.0                  |',
		'|                                                   |',
		'|          xmirror -w path    set workspace         |',
		'|          xmirror image      open image file       |',
		'|          xmirror start      start editor          |',
		'|                                                   |',
		' ---------------------------------------------------'
		].join('\n').green);
	process.exit();
};
showHelp();

switch(args[1]){
	case '-w':setWorkplace(args[2]);break;
	default: openImageFile(args[2]);
}